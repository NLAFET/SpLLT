% Beamer STFC font theme
%
% Florent Lopez

\ProvidesPackage{beamerfontthemeSTFC}

\ifxetex
\RequirePackage{fontspec}
\defaultfontfeatures{Mapping=tex-text}

\setsansfont[BoldFont={Bryant Pro}]{Bryant Pro}
\newfontfamily\ExtraLight{Bryant Pro Light}
\newfontfamily\Light{Bryant Pro Light}
\newfontfamily\Book{Bryant Pro}
\newfontfamily\Medium{Bryant Pro Medium}
\newfontfamily\code{Courier}
\AtBeginEnvironment{tabular}{\setsansfont[BoldFont={Bryant Pro}, Numbers={Monospaced}]{Bryant Pro}}

